@model VisionsConstructionLLC.WebUI.Model.Login

@{
	ViewBag.Title = "Login";
	Layout = "~/Views/_Layout.cshtml";
}

<section class="row padding">
	<div class="col-md-12">
		@using (Html.BeginForm("Login", "Authentication", FormMethod.Post)) {
			@Html.AntiForgeryToken()
			<h1>Login</h1>
			@Html.ValidationSummary(false)
			<div class="form-group">
				@Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Username, new { autocomplete = "off" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2", autocomplete = "off" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Password)
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Submit" />
				</div>
			</div>
		}
	</div>
</section>