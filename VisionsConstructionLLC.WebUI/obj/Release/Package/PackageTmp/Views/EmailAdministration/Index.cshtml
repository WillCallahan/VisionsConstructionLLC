@model List<VisionsConstructionLLC.Database.Entities.Email>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/_Layout.cshtml";
}

<section class="row padding">
	<div class="col-md-12">
		<h1>Email Messages</h1>
		@Html.ValidationSummary(true)
		@if (Model.Count > 0) {
			<table class="table table-striped table-bordered table-hover table-responsive">
				<thead>
					<tr>
						<th>Index</th>
						<th>Name</th>
						<th>Email</th>
						<th>Phone</th>
						<th>Date</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (VisionsConstructionLLC.Database.Entities.Email email in Model) {
						<tr>
							<td>@email.Id</td>
							<td>@email.Name</td>
							<td>@email.Address</td>
							<td>@email.Phone</td>
							<td>@email.Date</td>
							<td class="center">
								@using (Html.BeginForm("EmailItem/" + @email.Id, "EmailAdministration", FormMethod.Get)) {
									<button type="submit" class="btn btn-default" value="edit" title="View Details">
										<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
									</button>
								}
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else {
			<p>There are currently no messages.</p>
		}
	</div>
</section>