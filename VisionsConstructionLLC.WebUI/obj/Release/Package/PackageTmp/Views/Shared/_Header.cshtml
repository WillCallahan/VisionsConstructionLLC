<header>
	<nav class="navbar navbar-inverse navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Visions Construction</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">Visions Construction</a>
			</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				@if (ViewContext.RouteData.Values["Controller"].ToString() == "Home") {
					<ul class="nav navbar-nav">
						<li id="estimate-banner" class="visible-md-block visible-lg-block">
							<img src="~/Content/images/secondary-images/free-estimate.png" alt="Free Estimate " style="position: absolute; float: right; top: 0px; padding-left: 20px; z-index: 100;" />
						</li>
					</ul>
				}
				<ul class="nav navbar-nav navbar-right">
					<li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
						<a href="@Url.Action("", "")">Home <span class="sr-only"></span></a>
					</li>
					<li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "About" ? "active" : "")">
						<a href="@Url.Action("About", "About")">About</a>
					</li>
					<li class="dropdown @(ViewContext.RouteData.Values["Controller"].ToString() == "Gallery" ? "active" : "")">
						<a href="@Url.Action("Gallery", "Gallery")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Gallery <span class="caret"></span></a>
						<ul class="dropdown-menu">
							@Html.Action("_Menu", "Menu")
						</ul>
					</li>
					<li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Contact" ? "active" : "")">
						<a href="@Url.Action("Contact", "Contact")">Contact</a>
					</li>
					@if (HttpContext.Current.User.Identity.IsAuthenticated) {
						<li class="dropdown @(ViewContext.RouteData.Values["Controller"].ToString() == "GalleryAdministration" ? "active" : "")">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="@Url.Action("GalleryAdministration", "GalleryAdministration")">Administration</a></li>
								<li><a href="@Url.Action("Index", "EmailAdministration")">Emails</a></li>
								<li role="separator" class="divider"></li>
								<li><a href="@Url.Action("Logout", "Authentication")">Logout</a></li>
							</ul>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>
</header>